{% extends routeArea == 'admin' ? 'ZikulaRoutesModule::adminBase.html.twig' : 'ZikulaRoutesModule::base.html.twig' %}
{% block title %}
    {{ __('Reload') }}
{% endblock %}
{% block adminPageIcon %}square{% endblock %}
{% block content %}
    <div class="zikularoutesmodule-reload zikularoutesmodule-reload">
        <p>Please override this template by moving it from <em>/system/routes/Resources/views/Route/reload.html.twig</em> to either your <em>/themes/YourTheme/Resources/views/modules/ZikulaRoutesModule/Route/reload.html.twig</em> or <em>/config/templates/ZikulaRoutesModule/Route/reload.html.twig</em>.</p>
    </div>
{% endblock %}
